<html lang="en">

<head>
  <title>Shopping Cart</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src="https://use.fontawesome.com/85b6cc54da.js"></script>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.9.0/css/bootstrap-slider.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.9.0/bootstrap-slider.min.js"></script>
  
</head>

<body>
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">List Product</a>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <li><a href="/addprod"><span class="glyphicon glyphicon-plus"></span> Add Product</a></li>
          <li><a href="/cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Cart</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="col-md-4">
      <div>
        <label for="price-min">Name:</label>

        <form action="/list" method="GET">
          <div class="input-group">
            
            <input type="text" class="form-control" placeholder="Search for..."  name="searchText"><br>
            Price:  <b>€ 0</b> <input id="ex2" name="range" type="text" class="span2" value="" data-slider-min="0" data-slider-max="5000" data-slider-step="5" data-slider-value="[0,1000]"/> <b>€ 1000</b><br>
              <input class="btn btn-default" type="submit">
            
          </div><!-- /input-group -->
        </form>

      </div>
      
      
    </div>

    <div class="col-md-8">
      <ul class="list-group">
        <% list.forEach(function (item) { %>
          <li class="list-group-item"> Name:
            <%= item.name %> <span class="badge"><a href="/additem/<%= item.id %>" style="color:white">add to cart</a></span></li>
          <% }) %>

      </ul>
    </div>
  </div>



</body>
<script>
  var slider = new Slider('#ex2', {});
</script>
</html>